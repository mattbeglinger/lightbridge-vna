# infrastructure/terraform.tfvars

# AWS Settings (Leave as default if using 'default' profile)
aws_profile = "default"
aws_region  = "us-east-1"

# Azure Settings (REQUIRED - Update these!)
# Run 'az account show' to find these values
azure_subscription_id = "your-subscription-id-here"
azure_tenant_id       = "your-tenant-id-here"

# Project Settings
cluster_name_prefix   = "lightbridge"
